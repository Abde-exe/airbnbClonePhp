{% extends 'layout.html.twig' %}
{% block content %}

	<div class="jumbotron text-center">
		<h1>Louer un appart ou une maison</h1>
	</div>
	<div class="container row mt-4 ">
		<h2>Louer un appart ou une maison</h2>
		<div class="d-flex flex-nowrap">
			<div class="form col-2">
				{{form_start(form)}}
				<div class="col">
					<h4>Rechercher</h4>
					{{form_row(form.q)}}
				</div>
				<div class="col">
					<h4>Catégories</h4>

					{{form_row(form.categories)}}
				</div>
				<div class="col">
					<h4>Prix minimum</h4>

					{{form_row(form.min)}}
				</div>
				<div class="col">
					<h4>Prix maximum</h4>

					{{form_row(form.max)}}
				</div>
				<div class="col">
					<button type="submit" class="btn btn-primary ">Filtrer</button>
				</div>
				{{form_end(form)}}
			</div>

			<div class="flex row col-12">
				{% for propriete in proprietes %}
					<div class="card mx-5 my-5  col-sm-3 bord ">
						<img src="{{asset('photoProprietes/' ~ propriete.photos)}}" class=" rounded"/>


						<div class="card-body">
							<h4 class="card-title">{{propriete.titre}}</h4>
							<h5 class="card-subtitle text-muted">Localisation</h5>
							<div class="text-muted">
								Ville
							</br>
							{{propriete.category.name}}

						</div>
						<strong>{{propriete.prixJournalier}}€</strong>/nuit
					</div>
					<a class="btn btn-primary badge toast show" href="{{path('propriete_detail',{id:propriete.id})}}">Voir plus</a>
				</div>
			{% endfor %}
		</div>
	</div>
	<div>
		{{knp_pagination_render(proprietes)}}</div>
{% endblock %}
