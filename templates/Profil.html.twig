{% extends 'layout.html.twig' %}

{% block title %}
	Profil
{% endblock %}

{% block content %}
	<div class="my-5 container text-center">
		Bonjour
		<h1>
			{{user.prenom}}
			{{user.nom}}</h1>
		<h2></h2>
		<h3 class="text-muted">{{user.email}}</h3>
	</div>
	<div class=" row d-flex justify-content-center text-center container-fluid">
		<h1 class="text-primary">Mes propriétés</h1>
		<table class="table table-hover">
			<thead>
				<tr class="table-secondary table-striped">
					<th scope="col">Titre</th>
					<th scope="col">Description</th>
					<th scope="col">Photos</th>
					<th scope="col">prix/J</th>
					<th scope="col">Date</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for propriete in proprietes %}
					<tr>
						<td>{{propriete.titre}}</td>
						<td>{{propriete.description | slice(0,15)}}...</td>
						<td>
							<img class="img-thumbnail " width="200" height="200" src="{{asset('photoProprietes/' ~ propriete.photos)}}"/>
						</td>
						<td>{{propriete.prixJournalier}}</td>
						<td>{{propriete.dateEnregistrement | date("d/m/y")}}</td>
						<td>
							<div>
								<a href="{{path('propriete_detail',{id:propriete.id})}}">Voir</a>

								<a href="{{ path('propriete_update',{id:propriete.id})}}">
									<i class="fas fa-edit mx-1 text-success"></i>
								</a>
								<a href="{{ path('propriete_delete',{id:propriete.id})}}">
									<i class="fas fa-trash mx-1 text-danger" onclick="return confirm('Êtes vous sûr(e) de vouloir supprimer cette propriete?')"></i>
								</a>
							</div>
						</td>

					</tr>
				{% endfor %}

			</tbody>
		</tbody>
	</table>
</div>
<div>

	<a class="btn btn-primary pill" href="{{ path('propriete_add')}}">Ajouter</a>
</div>{% endblock %}
