{% extends 'layout.html.twig' %}

{% block title %}
	Profil
{% endblock %}

{% block content %}
	<div class=" row d-flex justify-content-center text-center container-fluid">
		<h1 class="text-primary">Tous les utilisateurs</h1>
		<table class="table table-hover">
			<thead>
				<tr class="table-secondary table-striped">
					<th scope="col">Nom</th>
					<th scope="col">Prenom</th>
					<th scope="col">Email</th>
					<th scope="col">Role</th>
					<th scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{user.nom}}</td>
						<td>{{user.prenom}}</td>
						<td>{{user.email}}</td>
						{% if user.roles[0] == 'ROLE_ADMIN' %}
							<td>Admin</td>
						{% else %}
							<td>Membre</td>
						{% endif %}
						<td>
							<div>
								<a href="{{path('app_profil',{id:user.id})}}">Voir</a>
								{# 
																																																								<a href="{{ path('profil_update',{id:user.id})}}">
																																																									<i class="fas fa-edit mx-1 text-success"></i>
																																																								</a> #}
								<a href="{{ path('user_delete',{id:user.id})}}">
									<i class="fas fa-trash mx-1 text-danger" onclick="return confirm('Êtes vous sûr(e) de vouloir supprimer cet utilisateur?')"></i>
								</a>
							</div>
						</td>

					</tr>
				{% endfor %}

			</tbody>
		</tbody>
	</table>


</div>{% endblock %}
